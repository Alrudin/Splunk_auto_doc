# Application Configuration
DEBUG=true
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text
# LOG_FORMAT=json  # Use 'json' for structured JSON logs, 'text' for human-readable

# Database Configuration (for Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@db:5432/splunk_auto_doc
# For local development:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/splunk_auto_doc

# Storage Configuration
STORAGE_BACKEND=local
STORAGE_PATH=./storage
# For MinIO S3-compatible storage:
# STORAGE_BACKEND=s3
# S3_BUCKET=splunk-auto-doc
# S3_ENDPOINT_URL=http://minio:9000
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin

# API Configuration
API_V1_PREFIX=/v1
CORS_ORIGINS=["http://localhost:3000"]